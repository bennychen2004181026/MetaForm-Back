{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["./models/*"],
      "@middleware/*": ["./middlewares/*"],
      "@routes/*": ["./routes/*"],
      "@controllers/*": ["./controllers/*"],
      "@config/*": ["./config/*"],
      "@database/*": ["./database/*"]
    },
    "strict": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
